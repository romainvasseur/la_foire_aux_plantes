{% extends 'base.html.twig' %}

{% block body %}
    <div class="jumbotron text-center container">
        <h1>Connexion</h1>
    </div>
    <div class="container bg-light center rounded border border-success" style="padding: 30px;margin-top: 1em;">
        {% if error %}
            <div class="alert alert-danger">
                {{ error.messageKey }}
            </div>
        {% endif %}
        <form action="{{ path('security.login') }}" method="post">
            <div class="form-group">
                <input placeholder="Votre adresse Email" required name="_username" type="text" class="form-control" value="{{ last_username }}">
            </div>
            <div class="form-group">
                <input placeholder="Votre mot de passe" required name="_password" type="password" class="form-control">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Connexion :)</button>
            </div>
        </form>
    </div>

{% endblock %}